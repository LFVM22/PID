@using Models
@model Personagem
<script src="~/js/atributo.js"></script>
<script onload="flushLocal()"></script>
<style>
    .div_dist {
        display: none;
        visibility: hidden
    }

    label {
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }
  #BarraBio{
        color: black;
        background-color: red
    }
  #BarraRaca{
      color: black;
      background-color: red
  }
  #BarraClasse{
        color: black;
        background-color: red
    }
    #BarraAtributo{
        color: black;
        background-color: red
    }
</style>
@if(@Model.IdClasse != 1 || @Model.IdClasse != 7 || @Model.IdClasse != 8 | @Model.IdClasse != 10)
{
    <style>
        .BarraSegmento{
            width: 12;
            color: grey
        }
    </style>
}

    <div class="box3">
        <div class="at" >
            <h1 style="margin: 10px; width: 100%">Defina seus atributos!</h1>
            <hr>
            <div class="divatributos">
                <h3 style="display: inline-block; margin: auto">Distribuição Padrão</h3>
                <input  type="radio" id="radio_distpadrao" name="rolagem" onclick="escolher(this)">
                <h5>/ 8 / 10 / 12 / 13 / 14 / 15 /</h5>
            </div>
            <div class="divatributos">
                <h3 style="display: inline-block; margin: auto">4d6 - "Menor"</h3>
                <input type="radio" id="radio_distrolar" name="rolagem" onclick="escolher(this)">
            </div>
        </div>

            <div class="div_dist" id="div_distpadrao">
                <form class="t2" method="POST">
                    <div style="text-align: center;">
                        <div class="t" >
                            <p style="display:inline-block">Força</p>
                            <select class="area3" style="display:inline-block" asp-for="@Model.Forca">
                                <option value="">-</option>
                                <option value="8">8</option>
                                <option value="10">10</option>
                                <option value="12">12</option>
                                <option value="13">13</option>
                                <option value="14">14</option>
                                <option value="15">15</option>
                            </select>
                            <span asp-validation-for="@Model.Forca"></span>
                        </div>

                        <div class="t" >
                            <p style="display:inline-block">Destreza</p>
                            <select class="area3" style="display:inline-block" asp-for="@Model.Destreza">
                                <option value="">-</option>
                                <option value="8">8</option>
                                <option value="10">10</option>
                                <option value="12">12</option>
                                <option value="13">13</option>
                                <option value="14">14</option>
                                <option value="15">15</option>
                            </select>
                            <span asp-validation-for="@Model.Destreza"></span>
                        </div>

                        <div class="t" >
                            <p style="display:inline-block">Constituição</p>
                            <select class="area3" style="display:inline-block" asp-for="@Model.Constituicao">
                                <option value="">-</option>
                                <option value="8">8</option>
                                <option value="10">10</option>
                                <option value="12">12</option>
                                <option value="13">13</option>
                                <option value="14">14</option>
                                <option value="15">15</option>
                            </select>
                            <span asp-validation-for="@Model.Constituicao"></span>
                        </div>

                        <div class="t" >
                            <p style="display:inline-block">Inteligência</p>
                            <select class="area3" style="display:inline-block" asp-for="@Model.Inteligencia">
                                <option value="">-</option>
                                <option value="8">8</option>
                                <option value="10">10</option>
                                <option value="12">12</option>
                                <option value="13">13</option>
                                <option value="14">14</option>
                                <option value="15">15</option>
                            </select>
                            <span asp-validation-for=@Model.Inteligencia></span>
                        </div>

                        <div class="t" >
                            <p >Sabedoria</p>
                            <select class="area3"  asp-for="@Model.Sabedoria">
                                <option value="">-</option>
                                <option value="8">8</option>
                                <option value="10">10</option>
                                <option value="12">12</option>
                                <option value="13">13</option>
                                <option value="14">14</option>
                                <option value="15">15</option>
                            </select>
                            <span asp-validation-for="@Model.Sabedoria"></span>
                        </div>

                        <div class="t">
                            <p style="display:inline-block">Carisma</p>
                            <select class="area3" style="display:inline-block" asp-for="@Model.Carisma">
                                <option value="">-</option>
                                <option value='8'>8</option>
                                <option value="10">10</option>
                                <option value="12">12</option>
                                <option value="13">13</option>
                                <option value="14">14</option>
                                <option value="15">15</option>
                            </select>
                            <span asp-validation-for="@Model.Carisma"></span>
                        </div>
                        </div>
                        <br>
                        <input type="hidden" asp-for="@Model.IdPersonagem">
                        <center>
                        <button class="bt2" style="text-align: center;" type="submit"
                            asp-route-IdPersonagem="@Model.IdPersonagem">SAVE</button>
                        </center>
                </form>
            
            </div>
            
                <div class="div_dist" id="div_distrolar">
                    <form method="POST">
                    <div class="distrolar">
                        <label for="roladorforca">
                            <p style="display:inline-block">Força</p>
                        </label>
                        <input class="roladorforca" type="text" style="width: 20px" readonly asp-for="@Model.Forca">
                        <span asp-validation-for="@Model.Forca"></span>
                        <label id="roladorforca" onclick="rolar(this)">Rolar</label>
                    </div>

                    <div class="distrolar">
                        <label for="roladordestreza">
                            <p style="display:inline-block">Destreza</p>
                        </label>
                        <input class="roladordestreza" type="text" style="width: 20px" readonly
                            asp-for="@Model.Destreza">
                        <span asp-validation-for="@Model.Destreza"></span>
                        <label id="roladordestreza" onclick="rolar(this)">Rolar</label>
                    </div>

                    <div class="distrolar">
                        <label for="roladoreconstituicao">
                            <p style="display:inline-block">Constituição</p>
                        </label>
                        <input class="roladorconstituicao" type="text" style="width: 20px" readonly
                            asp-for="@Model.Constituicao">
                        <span asp-validation-for="@Model.Constituicao"></span>
                        <label id="roladorconstituicao" onclick="rolar(this)">Rolar</label>
                    </div>

                    <div class="distrolar">
                        <label for="roladorinteligencia">
                            <p style="display:inline-block">Inteligência</p>
                        </label>
                        <input class="roladorinteligencia" type="text" style="width: 20px" readonly
                            asp-for="@Model.Inteligencia">
                        <span asp-validation-for="@Model.Inteligencia"></span>
                        <label id="roladorinteligencia" onclick="rolar(this)">Rolar</label>
                    </div>

                    <div class="distrolar">
                        <label for="roladorsabedoria">
                            <p style="display:inline-block">Sabedoria</p>
                        </label>
                        <input class="roladorsabedoria" type="text" style="width: 20px" readonly
                            asp-for="@Model.Sabedoria">
                        <span asp-validation-for="@Model.Sabedoria"></span>
                        <label id="roladorsabedoria" onclick="rolar(this)">Rolar</label>
                    </div>

                    <div class="distrolar">
                        <label for="rolarocarisma">
                            <p style="display:inline-block">Carisma</p>
                        </label>
                        <input class="roladorcarisma" type="text" style="width: 20px" readonly asp-for="@Model.Carisma">
                        <span asp-validation-for="@Model.Carisma"></span>
                        <label id="roladorcarisma" onclick="rolar(this)">Rolar</label>
                    </div>
                    <input type="hidden" asp-for="@Model.IdPersonagem">
                    <button style="text-align: center" type="submit"
                        asp-route-IdPersonagem="@Model.IdPersonagem">Confirmar</button>
                </form>
            </div>
        </div>
    </div>

