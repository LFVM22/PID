@using Models
@model Personagem
<script src="~/js/pericia.js"></script>

<center>
    <div style="outline:auto; display:inline-block">
        <h1 style="margin: 10px">Selecione suas perícias</h1>
        <hr>
        <div style="justify-self: center; clear:right; position:static">


            <form onclick="pericia()" method="POST">
                <h3>Perícias de Antecedente:</h3>
                <!--Acólito-->
                @foreach (var item in ViewBag.listaantecedente)
                {
                    if (Model.IdAntecedente == item.IdAntecedente)
                    {
                        <h5>@item.Nome</h5>
                    }
                }
                @if (Model.IdAntecedente == 1)
                {
                    <input onclick="return false;" type="radio" checked  asp-for="@Model.Intuicao" value=@true>
                    <label for="ft">Intuição</label>
                    <br>
                    <input onclick="return false;" checked type="radio"
                    asp-for="@Model.Religiao" value=@true>
                    <label for="pres">Religião</label>
                    <br>
                }
                else if (Model.IdAntecedente == 2)
                {
                    <input onclick="return false;" type="checkbox" checked id="ft" name="pericia_ant" value="furtividade">
                    <label for="ft">Intuição</label>
                    <br>
                    <input onclick="return false;" checked type="checkbox" id="pres" name="pericia_ant"
                    value="prestidigitacao">
                    <label for="pres">Persuasão</label>
                    <br>
                }
                else if (Model.IdAntecedente == 3)
                {
                    <input onclick="return false;" type="checkbox" checked id="ft" name="pericia_ant" value="furtividade">
                    <label for="ft">Acrobacia</label>
                    <br>
                    <input onclick="return false;" checked type="checkbox" id="pres" name="pericia_ant"
                    value="prestidigitacao">
                    <label for="pres">Atuação</label>
                    <br>
                }
                else if (Model.IdAntecedente == 4)
                {
                    <input onclick="return false;" type="checkbox" checked id="ft" name="pericia_ant" value="furtividade">
                    <label for="ft">Enganação</label>
                    <br>
                    <input onclick="return false;" checked type="checkbox" id="pres" name="pericia_ant"
                    value="prestidigitacao">
                    <label for="pres">Prestidigitação</label>
                    <br>
                }
                else if (Model.IdAntecedente == 5)
                {
                    <input onclick="return false;" type="checkbox" checked id="ft" name="pericia_ant" value="furtividade">
                    <label for="ft">Enganação</label>
                    <br>
                    <input onclick="return false;" checked type="checkbox" id="pres" name="pericia_ant"
                    value="prestidigitacao">
                    <label for="pres">Furtividade</label>
                    <br>
                }
                else if (Model.IdAntecedente == 6)
                {
                    <input onclick="return false;" type="checkbox" checked id="ft" name="pericia_ant" value="furtividade">
                    <label for="ft">Medicina</label>
                    <br>
                    <input onclick="return false;" checked type="checkbox" id="pres" name="pericia_ant"
                    value="prestidigitacao">
                    <label for="pres">Religião</label>
                    <br>
                }
                else if (Model.IdAntecedente == 7)
                {
                    <input onclick="return false;" type="checkbox" checked id="ft" name="pericia_ant" value="furtividade">
                    <label for="ft">Atletismo</label>
                    <br>
                    <input onclick="return false;" checked type="checkbox" id="pres" name="pericia_ant"
                    value="prestidigitacao">
                    <label for="pres">Sobrevivência</label>
                    <br>
                }
                else if (Model.IdAntecedente == 8)
