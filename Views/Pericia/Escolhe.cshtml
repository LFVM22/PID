                else
                {
                    Environment.Exit(0);
                }
                @foreach (var item in @ViewBag.listaantecedente)
                {
                    if (Model.IdAntecedente == item.IdAntecedente)
                    {
                        <hr>
                        <h5>Proficiencias:</h5>
                        <h6>@item.Proficiencia</h6>
                        <hr>
                        <hr>
                    }
                }

                <h3>Perícias de Classe:</h3>

                @{
                    string acrobacia = "Acrobacia";
                    string arcanismo = "Arcanismo";
                    string atletismo = "Atletismo";
                    string atuacao = "Atuação";
                    string enganacao = "Enganação";
                    string furtividade = "Furtividade";
                    string historia = "História";
                    string intimidacao = "Intimidação";
                    string intuicao = "Intuição";
                    string investigacao = "Investigação";
                    string lidarcomanimais = "LidarcomAnimais";
                    string medicina = "Medicina";
                    string natureza = "Natureza";
                    string percepcao = "Percepção";
                    string persuasao = "Persuasão";
                    string prestidigitacao = "Prestidigitação";
                    string religiao = "Religião";
                    string sobrevivencia = "Sobrevivência";

                    @foreach (var item in @ViewBag.listaclasse)
                    {
                        if (Model.IdClasse == item.IdClasse)
                        {
                            <h5>@item.Nome</h5>

                            if (Model.IdClasse == 1)
                            {
                                <h6>Escolha duas entre:</h6>
                                <br>
                                <input type="radio" id='@("Pericia" + @lidarcomanimais)' asp-for="@Model.LidarcomAnimais" value=@true>
                                <label for='@("Pericia" + @lidarcomanimais)'>@lidarcomanimais</label>
                                <br>
                                <input type="radio" id='@("Pericia" + @atletismo)' asp-for="@Model.Atletismo" value=@true>
                                <label for='@("Pericia" + @atletismo)'>@atletismo</label>
                                <br>
                                <input type="radio" id='@("Pericia" + @intimidacao)' asp-for="@Model.Intimidacao" value=@true>
                                <label for='@("Pericia" + @intimidacao)'>@intimidacao</label>
                                <br>
                                <input type="radio" id='@("Pericia" + @natureza)' asp-for="@Model.Natureza" value=@true>
                                <label for='@("Pericia" + @natureza)'>@natureza</label>
                                <br>
                                <input type="radio" id='@("Pericia" + @percepcao)' asp-for="@Model.Percepcao" value=@true>
                                <label for='@("Pericia" + @percepcao)'>@percepcao</label>
                                <br>
                                <input type="radio" id='@("Pericia" + @sobrevivencia)' asp-for="@Model.Sobrevivencia" value=@true>
                                <label for='@("Pericia" + @sobrevivencia)'>@sobrevivencia</label>
                                <br>
                            }
                        }
                    }
                }
                <input type="hidden" asp-for="@Model.IdPersonagem">
                <button type="submit" asp-route-IdPersonagem="@Model.IdPersonagem">Salvar</button>
            </form>
            
        </div>
    </div>
</center>
