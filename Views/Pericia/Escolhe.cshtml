                    <input onclick="return false;" checked type="checkbox" id="pres" name="pericia_ant"
                    value="prestidigitacao">
                    <label for="pres">Persuasão</label>
                    <br>
                }
                else if (Model.IdAntecedente == 11)
                {
                    <input onclick="return false;" type="checkbox" checked id="ft" name="pericia_ant" value="furtividade">
